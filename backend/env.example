# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/tailorai

# AI Models Configuration
OPENAI_API_KEY=your_openai_api_key_here
YOLO_MODEL_PATH=yolov8n.pt
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
SEGMENT_ANYTHING_MODEL_PATH=sam_vit_h_4b8939.pth

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=tailorai-images
AWS_REGION=us-east-1

# Google Cloud Storage Configuration (Alternative)
GCS_BUCKET_NAME=tailorai-images
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=TailorAI

# Model Settings
FRAME_SAMPLE_RATE=5
CONFIDENCE_THRESHOLD=0.5
MAX_FRAMES_PER_REQUEST=10

# Style Analysis Settings
MAX_STYLE_IMAGES=5
SIMILARITY_THRESHOLD=0.7
